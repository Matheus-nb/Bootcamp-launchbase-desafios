{% extends "layout.njk" %}

{% block head %}
    <title>Teacher - Edit</title>
    <link rel="stylesheet" href="/styles/teachers.css">
{% endblock head %}

{% block content %}

    <div class="card">
         <section
            class="avatar"
            style="background: url({{teacher.avatar_url}}) no-repeat center center/ cover">
        </section>

        <section class="details">
            <form method="POST" action="/teachers?_method=PUT">
                <h3>Edit</h3>

                {% include "teachers/fields.njk" %}

                <input type="hidden" name="id" value="{{teacher.id}}">

            </form>

            <form id="form-delete" action="/teachers?_method=DELETE" method="post">
                <input type="hidden" name="id" value="{{teacher.id}}">
                <button type="submit" class="delet">Delete</button>
            </form>

             {% include "../confirm.njk" %}

        </section>
    </div>
    
{% endblock content %}