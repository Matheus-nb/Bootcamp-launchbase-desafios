{% extends "layout.njk" %}

{% block head %}
    <title>Clases - teachers</title>
    <link rel="stylesheet" href="/styles/teachers.css">
{% endblock head %}

{% block content %}
    <div class="card table-container">
        <table width="100%">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
                {% for teacher in teachers %}
                    <tr>
                        
                        <td>
                            <span class="avatar_img_table" style="background-image:url({{teacher.avatar_url}})"></span>
                            {{teacher.name}}
                        </td>
                        <td>{% for materia in teacher.materia.split(", ") %}
                            <span>{{materia}}</span>
                        {% endfor %}</td>
                        <td><a href="/teachers/{{teacher.id}}">Ver</a></td>
                    
                    </tr>
                {% endfor %}
            </tbody>

        </table>
    
    </div>
{% endblock content %}